---
export interface Props {
  href: string
  icon: string
  name: string
}

const { href, icon, name } = Astro.props
---

<i
  class="inline-block p-1 not-italic font-normal leading-none text-center text-amber-500 break-words cursor-pointer"
  href={href}
>
  <title class="text-neutral-800" style="list-style: outside none none;">
    {name}
  </title>
  <i class={icon}></i>
</i>
