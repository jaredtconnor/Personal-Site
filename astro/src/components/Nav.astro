---
import { SITE_TITLE } from "../const";
import NavLink from "./NavLink.astro";
import SocialLink from "./SocialLink.astro";
---

<div
  class="relative px-3 pb-0 pt-6 text-neutral-800 min-[685px]:pb-0 min-[685px]:pl-2 min-[685px]:pr-2 min-[685px]:pt-8 min-[960px]:pb-0 min-[960px]:pl-2 min-[960px]:pr-2 min-[960px]:pt-6"
>
  <div>
    <div class="flex items-center min-[685px]:block">
      <h2
        class="my-3 ml-2 text-lg font-semibold min-[685px]:ml-0 min-[960px]:mt-12"
      >
        {SITE_TITLE}
        <a
          href="https://twitter.com/loopstrangely"
          class="font-medium text-blue-700">@loopstrangely</a
        >
      </h2>
    </div>
    <p class="mb-3 text-neutral-500 min-[685px]:mb-6 min-[960px]:mb-7">
      Software Engineer and Data Analyst. I think and write about the impacts of
      technology on the economy.
    </p>

    <ul
      class="m-0 p-0 text-center leading-6 text-neutral-800"
      style="list-style: none;"
    >
      <NavLink href="/blog">Blog</NavLink>
      <NavLink href="/about">About</NavLink>
      <NavLink href="/projects">Projects</NavLink>
      <NavLink href="/rss.xml">Feed</NavLink>
    </ul>

    <ul
      class="-mx-1 my-2 flex flex-shrink-0 flex-grow-0 justify-center p-0 leading-6 text-neutral-800 sm:justify-center"
      style="flex-flow: wrap; list-style: none;"
    >
      <SocialLink
        href="https://github.com/jaredtconnor"
        icon="fa-brands fa-github"
        name="github"
      />
      <SocialLink
        href="https://twitter.com/Jared_ThomasC"
        icon="fa-brands fa-twitter"
        name="twitter"
      />
      <SocialLink
        href="https://www.linkedin.com/in/jaredconnor/"
        icon="fa-brands fa-linkedin"
        name="linkedin"
      />
      <SocialLink
        href="mailto:jaredconnor301@gmail.com?subject=Reaching out"
        icon="fa-solid fa-envelope"
        name="mail"
      />
    </ul>
  </div>
</div>
