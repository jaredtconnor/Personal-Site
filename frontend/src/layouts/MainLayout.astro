---
import BaseLayout from './BaseLayout.astro'

const res = await fetch('http://opie.home:3001/api/posts')
const posts = await res.json()
---

<BaseLayout>
  <article class="prose">
    posts.docs.map((post) => (
    <h2 set:html={post.title} />
    <p set:html={post.content} />
     ))

    <slot />
  </article>
</BaseLayout>
