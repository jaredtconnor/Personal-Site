---
import NavLink from './NavLink.astro'
import SocialLink from './SocialLink.astro'

import { SITE_TITLE } from '../consts'
---

<div
  class="md:w-[150px] -mx-4 font-san pr-5 md:flex-shrink-0 md:mx-0 md:px-0 overflow-hidden"
>
  <div class="sticky top-0">
    <div
      class="flex flex-col ml-2 mb-2 md:px-0 md:mb-8 md:flex-row items-start"
    >
      <a href="/" class="hover-bg hover:text-slate-800 break-words">
        {SITE_TITLE}
      </a>
    </div>

    <nav
      class="flex flex-row md:flex-col items-start relative px-0 md:px-0 pb-0 fade md:overflow-auto scroll-pr-6 md:relative"
    >
      <div class="flex flex-row md:flex-col space-x-0 pr-10 mb-2 mt-2 md:mt-0">
        <NavLink href="/blog">Blog</NavLink>
        <NavLink href="/about">About</NavLink>
        <NavLink href="/projects">Projects</NavLink>
        <NavLink href="/rss.xml">Feed</NavLink>
      </div>
    </nav>

    <nav
      class="flex flex-row items-start relative px-2 md:px-0 pb-0 fade md:overflow-auto scroll-pr-6 md:relative"
    >
      <div class="flex flex-row space-x-0 pr-10 mb-2 mt-2 md:mt-0">
        <SocialLink
          href="https://github.com/jaredtconnor"
          icon="fa-brands fa-github"
        />
        <SocialLink
          href="https://twitter.com/Jared_ThomasC"
          icon="fa-brands fa-twitter"
        />
        <SocialLink
          href="https://www.linkedin.com/in/jaredconnor/"
          icon="fa-brands fa-linkedin"
        />
        <SocialLink
          href="mailto:jaredconnor301@gmail.com?subject=Reaching out"
          icon="fa-solid fa-envelope"
        />
      </div>
    </nav>
  </div>
</div>
