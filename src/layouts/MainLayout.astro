---
import Head from "../components/Head.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en" class="bg-neutral-800 text-white">
  <Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <body
    class="max-w-4xl mb-40 flex flex-col md:flex-row mx-4 mt-8 md:mt-20 lg:mt-32 lg:mx-auto"
  >
    <Nav />
    <div class="flex-auto min-w-0 mt-6 md:mt-0 flex flex-col px-2 md:px-0">
      <slot />
    </div>
    <div>
      <Footer />
    </div>
  </body>
</html>
