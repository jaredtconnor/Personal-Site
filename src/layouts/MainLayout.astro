---
import Head from "../components/Head.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en" class="bg-neutral-800 text-white">
  <head>
    <Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="max-w-4xl mb-40 flex flex-col md:flex-row mx-4 mt-8 md:mt-20 lg:mt-32 lg:mx-auto"
  >
    <div
      class="md:w-[150px] -mx-4 font-san pr-5 md:flex-shrink-0 md:mx-0 md:px-0 overflow-hidden"
    >
      <div class="sticky top-0 right-0">
        <Nav />
      </div>
    </div>
    <div class="min-h-screen flex flex-col">
      <div
        class="prose prose-invert prose-neutral text-white max-w-none prose-a:text-sky-400 transistion hover:prose-a:bg-sky-200 hover:prose-a:text-slate-800 prose-a:no-underline prose-code:text-white prose-blockquote:text-white prose-strong:text-white prose:text-white prose-headings:text-white"
      >
        <slot />
      </div>
      <footer class="mt-auto">
        <Footer />
      </footer>
    </div>
  </body>
</html>
