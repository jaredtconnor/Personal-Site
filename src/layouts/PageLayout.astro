---
/*
  This layout is used in
  - pages/index.astro
  - pages/blog.astro
  - pages/projects.astro
*/

// Import the global.css file here so that it is included on
import '../styles/global.css'

import GoogleFont from './GoogleFont.astro'
import FontAwesome from './FontAwesome.astro'
import ThemeScript from './ThemeScript.astro'
import Favicon from './Favicon.astro'
import Nav from '../components/Nav.astro'
import Footer from '../components/Footer.astro'
import DarkModeToggle from '../components/DarkModeToggle.astro'
---

<!DOCTYPE html>
<html class="theme" lang="en">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content="Blogster" />
    <Favicon />
    <slot name="meta" />
    <GoogleFont />
    <ThemeScript />
    <FontAwesome />
  </head>

  <body class="block leading-6 m-5">
    <main id="wrapper" class="flex flex-col mx-4 mt-8 sm:mx-auto sm:mt-20 max-w-3xl">
      <div id="columns" class="flex flex-col md:flex-row">
        <div id="sidebar" class="md:w-1/3">
          <header>
            <a href="/" class="" style="font-size: xx-large;">Jared Connor</a>
          </header>

          <div id="menu" class="flex flex-wrap justify-between mt-4 mb-8 sm:flex-col">
            <div class="m-1">
              <a
                href="/about"
                class="p-0 border-b-2 border-yellow-400 border-solid cursor-pointer hover:text-yellow-400"
                >About</a
              >
            </div>
            <div class="m-1" style="text-decoration: none;">
              <a
                href="/posts"
                class="p-0 border-b-2 border-yellow-400 border-solid cursor-pointer hover:text-yellow-400"
                >Posts</a
              >
            </div>
            <div class="m-1" style="text-decoration: none;">
              <a
                href="/projects"
                class="p-0 border-b-2 border-yellow-400 border-solid cursor-pointer hover:text-yellow-400"
                >Projects</a
              >
            </div>
          </div>
          <DarkModeToggle />
        </div>
        <div class="leading-6 md:w-2/3">
          <slot name="main" />
        </div>
      </div>

      <footer class="mt-12 leading-6 text-center">
        <p class="text-center">Copyright Â© 2024 Jared Connor. All rights reserved.</p>
      </footer>

      <style>
      </style>
    </main>
  </body>
</html>
